{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "additionalBranchPrefix": "{{parentDir}}-",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "bumpVersion": "minor",
  "ignoreDeps": [
    "rook-ceph",
    "rook-ceph-cluster"
  ],
  "rebaseWhen": "behind-base-branch"
}
