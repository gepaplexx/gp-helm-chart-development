{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "additionalBranchPrefix": "{{parentDir}}-",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "bumpVersion": "minor",
  "ignoreDeps": [
    "rook-ceph",
    "rook-ceph-cluster"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchPaths": ["infra/gp-hub-monitoring/Chart.yaml"],
      "enabled": false
    }
  ]
  "rebaseWhen": "behind-base-branch"
}
